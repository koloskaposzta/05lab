<Window x:Class="lab5frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5frontend"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lb_out" Grid.Column="0" Grid.Row="0"></ListBox>
        <Button x:Name="b_send" Content="Send" Grid.Column="1" Grid.Row="1"></Button>
        <ListBox x:Name="lb_in" Grid.Column="1" Grid.Row="0"></ListBox>
        <TextBox x:Name="tb_send" Grid.Column="0" Grid.Row="1"/>
    </Grid>
</Window>
